{% extends 'CkWebBundle:Layouts:default.html.twig' %}

{% block page_title %}
    Tax list
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-8">
            {{ knp_pagination_render(pagination, 'CkWebBundle:Pagination:default.html.twig') }}
            Found total {{ pagination.getTotalItemCount }} tax
        </div>
        <div class="col-md-4">
            <a href="{{ path('tax_new') }}" class="btn btn-success pull-right">Add Product</a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Value</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tax in pagination %}
            <tr>
                <td><a href="{{ path('tax_show', { 'id': tax.id }) }}">{{ tax.id }}</a></td>
                <td>{{ tax.name }}</td>
                <td>{{ tax.value }}</td>
                <td>{% if tax.createdAt %}{{ tax.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if tax.updatedAt %}{{ tax.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <a href="{{ path('tax_show', { 'id': tax.id }) }}" class="btn btn-sm btn-success">
                        <i class="fa fa-search"></i>
                    </a>
                    <a href="{{ path('tax_edit', { 'id': tax.id }) }}" class="btn btn-sm btn-primary">
                        <i class="fa fa-pencil"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
