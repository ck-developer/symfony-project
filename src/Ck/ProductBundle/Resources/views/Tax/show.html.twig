{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tax</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tax.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tax.name }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ tax.value }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if tax.createdAt %}{{ tax.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if tax.updatedAt %}{{ tax.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tax_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tax_edit', { 'id': tax.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
