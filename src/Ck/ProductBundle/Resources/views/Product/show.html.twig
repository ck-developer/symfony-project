{% extends 'CkWebBundle:Layouts:default.html.twig' %}

{% block page_title %}
    Product
{% endblock %}

{% block page_content %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{% if product.enabled %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if product.createdAt %}{{ product.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if product.updatedAt %}{{ product.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('product_index') }}" class="btn btn-default">Back to the list</a>
            <a href="{{ path('product_edit', { 'id': product.id }) }}" class="btn btn-primary">Edit</a>
            {{ form_start(delete_form, { attr: { style: 'display: inline-block' }}) }}
            <button type="submit" class="btn btn-danger">Delete</button>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
