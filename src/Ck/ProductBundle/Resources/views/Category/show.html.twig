{% extends 'CkWebBundle:Layouts:default.html.twig' %}

{% block page_title %}
    Category
{% endblock %}

{% block page_content %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Created at</th>
                <td>{% if category.createdAt %}{{ category.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated at</th>
                <td>{% if category.updatedAt %}{{ category.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('category_index') }}" class="btn btn-default">Back to the list</a>
            <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-primary">Edit</a>
            {{ form_start(delete_form, { attr: { style: 'display: inline-block' }}) }}
            <button type="submit" class="btn btn-danger">Delete</button>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
